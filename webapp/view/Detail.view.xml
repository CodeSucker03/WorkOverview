<mvc:View
    displayBlock="true"
    controllerName="base.controller.Detail"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:table="sap.ui.table"
>
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:expandedContent>
                    <Label
                        id="expandedLabelA"
                        text="{queries>text}"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="snappedLabelA"
                        text="{queries>text} (Snapped)"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbarA"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        showClearOnFB="true"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                groupName="main"
                                name="subject"
                                label="Subject"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input id="filterSubject" />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="from"
                                label="From"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterFrom"
                                        forceSelection="false"
                                        width="100%"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="sentOn"
                                label="Sent on"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="filterSentOn"
                                        placeholder="e.g. 12/31/25"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="priority"
                                label="Priority"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterPriority"
                                        forceSelection="false"
                                        width="100%"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="dueDate"
                                label="Due Date"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="filterDueDate"
                                        placeholder="e.g. 12/31/25"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="status"
                                label="Status"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterStatus"
                                        forceSelection="false"
                                        width="100%"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="forwardedBy"
                                label="Forwarded By"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterForwardedBy"
                                        forceSelection="false"
                                        width="100%"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table
                id="table"
                rows="{products>/ProductCollection}"
                selectionMode="MultiToggle"
            >
                <table:extension>
                    <OverflowToolbar style="Clear">
                        <Label
                            text="Show:"
                            required="true"
                            class="sapUiTinyMarginBeginEnd"
                        />

                        <Select
                            selectedKey="inprogress"
                            width="200px"
                        >
                            <items>
                                <core:Item
                                    key="inprogress"
                                    text="In progress and New"
                                />
                                <core:Item
                                    key="all"
                                    text="All"
                                />
                                <core:Item
                                    key="completed"
                                    text="Completed"
                                />
                            </items>
                        </Select>

                        <ToolbarSpacer />

                        <Button
                            icon="sap-icon://action-settings"
                            type="Transparent"
                            tooltip="Settings"
                        />
                    </OverflowToolbar>
                </table:extension>
                <table:columns>
                    <table:Column>
                        <Label text="Product Id" />
                        <table:template>
                            <Input value="{products>ProductId}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="Name" />
                        <table:template>
                            <Text text="{products>Name}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="Category" />
                        <table:template>
                            <Text text="{products>Category}" />
                        </table:template>
                    </table:Column>
                    <table:Column>
                        <Label text="SupplierName" />
                        <table:template>
                            <Text text="{products>SupplierName}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
