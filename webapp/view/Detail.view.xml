<mvc:View
    displayBlock="true"
    controllerName="base.controller.Detail"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:table="sap.ui.table"
>
    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:expandedContent>
                    <Title
                        id="expandedLabelA"
                        text="{queries>text}"
                        titleStyle="H4"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Title
                        id="snappedLabelA"
                        text="{queries>text}"
                        titleStyle="H4"
                    />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbarA"
                        persistencyKey="myPersKey"
                        useToolbar="false"
                        showClearOnFB="true"
                        search=".onSearch"
                        filterChange=".onFilterChange"
                        afterVariantLoad=".onAfterVariantLoad"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                groupName="main"
                                name="subject"
                                label="Subject"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Input id="filterSubject" />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="from"
                                label="From"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterFrom"
                                        forceSelection="false"
                                        width="100%"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="SYSTEM"
                                            text="System"
                                        />
                                        <core:Item
                                            key="USER"
                                            text="User"
                                        />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="sentOn"
                                label="Sent on"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="filterSentOn"
                                        placeholder="e.g. 12/31/25"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="priority"
                                label="Priority"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterPriority"
                                        forceSelection="false"
                                        width="100%"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="1"
                                            text="1 - Highest (Express)"
                                        />
                                        <core:Item
                                            key="2"
                                            text="2 - Very High"
                                        />
                                        <core:Item
                                            key="3"
                                            text="3 - Higher"
                                        />
                                        <core:Item
                                            key="4"
                                            text="4 - High"
                                        />
                                        <core:Item
                                            key="5"
                                            text="5 - Medium"
                                        />
                                        <core:Item
                                            key="6"
                                            text="6 - Low"
                                        />
                                        <core:Item
                                            key="7"
                                            text="7 - Lower"
                                        />
                                        <core:Item
                                            key="8"
                                            text="8 - Very Low"
                                        />
                                        <core:Item
                                            key="9"
                                            text="9 - Lowest"
                                        />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="dueDate"
                                label="Due Date"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        id="filterDueDate"
                                        placeholder="e.g. 12/31/25"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="status"
                                label="Status"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterStatus"
                                        forceSelection="false"
                                        width="100%"
                                    >
                                        <core:Item
                                            key=""
                                            text="All"
                                        />
                                        <core:Item
                                            key="WAITING"
                                            text="Waiting"
                                        />
                                        <core:Item
                                            key="READY"
                                            text="Ready"
                                        />
                                        <core:Item
                                            key="SELECTED"
                                            text="Accepted"
                                        />
                                        <core:Item
                                            key="STARTED"
                                            text="In Process"
                                        />
                                        <core:Item
                                            key="ERROR"
                                            text="Error"
                                        />
                                        <core:Item
                                            key="COMMITTED"
                                            text="Executed"
                                        />
                                        <core:Item
                                            key="COMPLETED"
                                            text="Completed"
                                        />
                                        <core:Item
                                            key="CANCELLED"
                                            text="Logically Deleted"
                                        />
                                        <core:Item
                                            key="CHECKED"
                                            text="In Preparation"
                                        />
                                        <core:Item
                                            key="EXCPCAUGHT"
                                            text="Exception Caught"
                                        />
                                        <core:Item
                                            key="EXCPHANDLR"
                                            text="Exception Active"
                                        />
                                    </Select>
                                </fb:control>
                            </fb:FilterGroupItem>

                            <fb:FilterGroupItem
                                groupName="main"
                                name="forwardedBy"
                                label="Forwarded By"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <Select
                                        id="filterForwardedBy"
                                        forceSelection="false"
                                        width="100%"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <table:Table
                id="table"
                rows="{table>/Rows}"
                selectionMode="MultiToggle"
            >
                <table:extension>
                    <OverflowToolbar style="Clear">
                        <Label
                            text="Show:"
                            required="true"
                            class="sapUiTinyMarginBeginEnd"
                        />

                        <Select
                            selectedKey="inprogress"
                            width="200px"
                            enabled="false"
                        >
                            <items>
                                <core:Item
                                    key="inprogress"
                                    text="In progress and New"
                                />
                                <core:Item
                                    key="all"
                                    text="All"
                                />
                                <core:Item
                                    key="completed"
                                    text="Completed"
                                />
                            </items>
                        </Select>

                        <ToolbarSpacer />

                        <Button
                            icon="sap-icon://action-settings"
                            type="Transparent"
                            tooltip="Settings"
                        />
                    </OverflowToolbar>
                </table:extension>
                <table:noData>
                    <IllustratedMessage
                        illustrationType="sapIllus-NoSearchResults"
                        enableVerticalResponsiveness="true"
                    />
                </table:noData>
                <table:columns>
                    <table:Column
                        filterProperty="WiText"
                        sortProperty="WiText"
                        width="15rem"
                    >
                        <Label text="Subject" />
                        <table:template>
                            <Text
                                text="{table>TaskDescr}"
                                wrapping="false"
                            />
                        </table:template>
                    </table:Column>
                    
                    <table:Column width="10rem">
                        <Label text="TaskID" />
                        <table:template>
                            <Text text="{table>Task}" />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="From" />
                        <table:template>
                            <Text text="{table>Mancc}" />
                        </table:template>
                    </table:Column>

                    <table:Column width="10rem">
                        <Label text="Sent on" />
                        <table:template>
                            <Text text="{table>WiCd}" />
                        </table:template>
                    </table:Column>

                    <table:Column width="8rem">
                        <Label text="Priority" />
                        <table:template>
                            <ObjectStatus
                                text="{
                                    path: 'table>WiPrio',
                                    formatter: '.priorityText'
                                }"
                                state="{
                                    path: 'table>WiPrio',
                                    formatter: '.priorityState'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="8rem">
                        <Label text="Status" />
                        <table:template>
                            <ObjectStatus
                                text="{
                                    path: 'table>WiStat',
                                    formatter: '.statusText'
                                }"
                                state="{
                                    path: 'table>WiStat',
                                    formatter: '.statusState'
                                }"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column width="12rem">
                        <Label text="Forwarded By" />
                        <table:template>
                            <Text text="{table>WiForwBy}" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
